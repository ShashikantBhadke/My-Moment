target 'My_Moment' do
  use_frameworks!
  
  # Firebase
  # Link:- https://firebase.google.com/docs/ios/setup?authuser=0
  pod 'Firebase/Auth'
  pod 'Firebase/Storage'
  pod 'Firebase/Database'
  pod 'Firebase/Analytics'
    
  # Activity Indicator
  # Link:- https://github.com/ninjaprox/NVActivityIndicatorView
  pod 'NVActivityIndicatorView'
  
  # IQKeyboardManagerSwift
  # Link:- https://github.com/hackiftekhar/IQKeyboardManager
  pod 'IQKeyboardManagerSwift', '6.5.4'
  
end
